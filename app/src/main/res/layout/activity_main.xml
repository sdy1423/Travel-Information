<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:text="경기도 게시판"
        android:onClick="onClick"
        android:id="@+id/main_btn_board1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_btn_board2"
        app:layout_constraintBottom_toTopOf="@id/main_btn_board3"/>

    <Button
        android:text="강원도 게시판"
        android:onClick="onClick"
        android:id="@+id/main_btn_board2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_btn_board1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_btn_board4"/>

    <Button
        android:text="경상도 게시판"
        android:onClick="onClick"
        android:id="@+id/main_btn_board3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/main_btn_board1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_btn_board4"
        app:layout_constraintBottom_toTopOf="@id/main_btn_board5"/>

    <Button
        android:text="전라도 게시판"
        android:onClick="onClick"
        android:id="@+id/main_btn_board4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/main_btn_board2"
        app:layout_constraintLeft_toRightOf="@id/main_btn_board3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_btn_travel"
        />

    <Button
        android:text="충청도 게시판"
        android:onClick="onClick"
        android:id="@+id/main_btn_board5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/main_btn_board3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_btn_travel"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:text="여행정보"
        android:id="@+id/main_btn_travel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/main_btn_board4"
        app:layout_constraintLeft_toRightOf="@id/main_btn_board5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>